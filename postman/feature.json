        {
          "name": "GET /events/{eventId}/comments - happy path published comments",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const main = async () => {",
                  "    const baseUrl = pm.collectionVariables.get(\"baseUrl\");",
                  "    const eventId = pm.collectionVariables.get(\"happyEventId\");",
                  "    const commentId = pm.collectionVariables.get(\"happyCommentId\");",
                  "",
                  "    if (!eventId || !commentId) {",
                  "        throw new Error(\"Missing happy-path variables. Run the previous happy-path request first.\");",
                  "    }",
                  "",
                  "    const send = (request) => new Promise((resolve, reject) => {",
                  "        pm.sendRequest(request, (err, res) => err ? reject(err) : resolve(res));",
                  "    });",
                  "",
                  "    const publishCommentRes = await send({",
                  "        url: `${baseUrl}/admin/comments/${commentId}`,",
                  "        method: \"PATCH\",",
                  "        header: { \"Content-Type\": \"application/json\" },",
                  "        body: {",
                  "            mode: \"raw\",",
                  "            raw: JSON.stringify({",
                  "                action: \"PUBLISH\",",
                  "                moderationNote: \"Approved by happy-path test\"",
                  "            })",
                  "        }",
                  "    });",
                  "",
                  "    if (publishCommentRes.code !== 200) {",
                  "        throw new Error(`Failed to publish comment: ${publishCommentRes.code} ${publishCommentRes.text()}`);",
                  "    }",
                  "};",
                  "",
                  "const interval = setInterval(() => {}, 1000);",
                  "",
                  "setTimeout(async () => {",
                  "    try {",
                  "        await main();",
                  "    } catch (err) {",
                  "        console.error(\"Happy-path publish setup failed\", err);",
                  "        throw err;",
                  "    } finally {",
                  "        clearInterval(interval);",
                  "    }",
                  "}, 100);"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "const json = pm.response.json();",
                  "const expectedCommentId = Number(pm.collectionVariables.get(\"happyCommentId\"));",
                  "",
                  "pm.test(\"Response is an array\", function () {",
                  "    pm.expect(Array.isArray(json)).to.eql(true);",
                  "});",
                  "",
                  "pm.test(\"Contains published happy-path comment\", function () {",
                  "    const comment = json.find(item => item.id === expectedCommentId);",
                  "    pm.expect(comment).to.not.be.undefined;",
                  "    pm.expect(comment.status).to.eql(\"PUBLISHED\");",
                  "});"
                ]
              }
            }
          ],
