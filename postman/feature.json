    {
      "name": "Happy Path (Auto Setup)",
      "item": [
        {
          "name": "POST /users/{userId}/events/{eventId}/comments - happy path",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const main = async () => {",
                  "    const baseUrl = pm.collectionVariables.get(\"baseUrl\");",
                  "    const send = (request) => new Promise((resolve, reject) => {",
                  "        pm.sendRequest(request, (err, res) => err ? reject(err) : resolve(res));",
                  "    });",
                  "",
                  "    const suffix = `${Date.now()}_${Math.floor(Math.random() * 10000)}`;",
                  "    const eventMoment = new Date(Date.now() + 6 * 60 * 60 * 1000);",
                  "    const pad = (n) => String(n).padStart(2, \"0\");",
                  "    const eventDate = `${eventMoment.getFullYear()}-${pad(eventMoment.getMonth() + 1)}-${pad(eventMoment.getDate())} ${pad(eventMoment.getHours())}:${pad(eventMoment.getMinutes())}:${pad(eventMoment.getSeconds())}`;",
                  "",
                  "    const initiatorRes = await send({",
                  "        url: `${baseUrl}/admin/users`,",
                  "        method: \"POST\",",
                  "        header: { \"Content-Type\": \"application/json\" },",
                  "        body: {",
                  "            mode: \"raw\",",
                  "            raw: JSON.stringify({",
                  "                name: `Happy Initiator ${suffix}`,",
                  "                email: `happy_initiator_${suffix}@mail.com`",
                  "            })",
                  "        }",
                  "    });",
                  "    if (initiatorRes.code !== 201) {",
                  "        throw new Error(`Failed to create initiator user: ${initiatorRes.code} ${initiatorRes.text()}`);",
                  "    }",
                  "    const initiatorId = initiatorRes.json().id;",
                  "",
                  "    const commenterRes = await send({",
                  "        url: `${baseUrl}/admin/users`,",
                  "        method: \"POST\",",
                  "        header: { \"Content-Type\": \"application/json\" },",
                  "        body: {",
                  "            mode: \"raw\",",
                  "            raw: JSON.stringify({",
                  "                name: `Happy Commenter ${suffix}`,",
                  "                email: `happy_commenter_${suffix}@mail.com`",
                  "            })",
                  "        }",
                  "    });",
                  "    if (commenterRes.code !== 201) {",
                  "        throw new Error(`Failed to create commenter user: ${commenterRes.code} ${commenterRes.text()}`);",
                  "    }",
                  "    const commenterId = commenterRes.json().id;",
                  "",
                  "    const categoryRes = await send({",
                  "        url: `${baseUrl}/admin/categories`,",
                  "        method: \"POST\",",
                  "        header: { \"Content-Type\": \"application/json\" },",
                  "        body: {",
                  "            mode: \"raw\",",
                  "            raw: JSON.stringify({",
                  "                name: `Happy category ${suffix}`",
                  "            })",
                  "        }",
                  "    });",
                  "    if (categoryRes.code !== 201) {",
                  "        throw new Error(`Failed to create category: ${categoryRes.code} ${categoryRes.text()}`);",
                  "    }",
                  "    const categoryId = categoryRes.json().id;",
                  "",
                  "    const eventRes = await send({",
                  "        url: `${baseUrl}/users/${initiatorId}/events`,",
                  "        method: \"POST\",",
                  "        header: { \"Content-Type\": \"application/json\" },",
                  "        body: {",
                  "            mode: \"raw\",",
                  "            raw: JSON.stringify({",
                  "                title: `Happy event ${suffix}`,",
                  "                annotation: \"Happy path event annotation with enough symbols for validation.\",",
                  "                description: \"Happy path event description with enough symbols for all validation checks.\",",
                  "                category: categoryId,",
                  "                eventDate: eventDate,",
                  "                location: { lat: 55.7558, lon: 37.6176 },",
                  "                paid: false,",
                  "                participantLimit: 10,",
                  "                requestModeration: true",
                  "            })",
                  "        }",
                  "    });",
                  "    if (eventRes.code !== 201) {",
                  "        throw new Error(`Failed to create event: ${eventRes.code} ${eventRes.text()}`);",
                  "    }",
                  "    const eventId = eventRes.json().id;",
                  "",
                  "    const publishEventRes = await send({",
                  "        url: `${baseUrl}/admin/events/${eventId}`,",
                  "        method: \"PATCH\",",
                  "        header: { \"Content-Type\": \"application/json\" },",
                  "        body: {",
                  "            mode: \"raw\",",
                  "            raw: JSON.stringify({ stateAction: \"PUBLISH_EVENT\" })",
                  "        }",
                  "    });",
                  "    if (publishEventRes.code !== 200) {",
                  "        throw new Error(`Failed to publish event: ${publishEventRes.code} ${publishEventRes.text()}`);",
                  "    }",
                  "",
                  "    pm.collectionVariables.set(\"happyCommenterId\", commenterId);",
                  "    pm.collectionVariables.set(\"happyEventId\", eventId);",
                  "};",
                  "",
                  "const interval = setInterval(() => {}, 1000);",
                  "",
                  "setTimeout(async () => {",
                  "    try {",
                  "        await main();",
                  "    } catch (err) {",
                  "        console.error(\"Happy-path setup failed\", err);",
                  "        throw err;",
                  "    } finally {",
                  "        clearInterval(interval);",
                  "    }",
                  "}, 100);"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "const json = pm.response.json();",
                  "pm.collectionVariables.set(\"happyCommentId\", json.id);",
                  "",
                  "pm.test(\"Response contains created comment id\", function () {",
                  "    pm.expect(json.id).to.be.a(\"number\");",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"text\": \"Happy path comment: create and then publish\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/{{happyCommenterId}}/events/{{happyEventId}}/comments",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
